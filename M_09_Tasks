two = 0
right_answer = 'Пушкин'
for num in range (5):
  quest = input('Кто написал Евгения Онегина? ')
  if quest == right_answer:
    print('Молодец! Опрос окочен. ')
    break
  two += 1
  print('Садись! Два.')
  
print()
print('Всего двоешников', two)

